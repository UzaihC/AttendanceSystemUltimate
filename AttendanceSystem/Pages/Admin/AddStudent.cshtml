@page
@model AttendanceSystem.Pages.Students.AddStudentModel

<h1>Add Student</h1>

<form method="post">
    <div class="form-group">
        <label>Student Number</label>
        <input asp-for="StudentForm.StudentNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="StudentForm.FullName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

@if (TempData["Message"] != null)
{
    <p class="text-success mt-2">@TempData["Message"]</p>
}

@if (Model.ShowSavedStudents)
{
    <h3 class="mt-4">Recently Added Students</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student Number</th>
                <th>Full Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.SavedStudents)
            {
                <tr>
                    <td>@s.StudentNumber</td>
                    <td>@s.FullName</td>
                </tr>
            }
        </tbody>
    </table>
}
