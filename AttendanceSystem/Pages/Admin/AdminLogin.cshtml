@page
@model AttendanceSystem.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}
<style>
    body {
        background: linear-gradient(135deg, #0a0a0a 0%, #1d1d1d 60%, #3a3a3a 100%);
        font-family: "Segoe UI", sans-serif;
        min-height: 100vh;
        padding-top: 40px;
    }

    .admin-card {
        background: rgba(20, 20, 20, 0.95);
        border-radius: 12px;
        padding: 35px;
        max-width: 420px;
        margin: auto;
        border: 2px solid #d4af37; /* gold border */
        box-shadow: 0 0 25px rgba(0,0,0,0.5);
    }

    h2 {
        color: #d4af37;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
        text-shadow: 0 0 8px rgba(212,175,55,0.4);
    }

    label {
        font-weight: 600;
        color: #f5f5f5;
    }

    .form-control {
        background-color: #2a2a2a;
        border: 1px solid #555;
        color: #f5f5f5;
        border-radius: 8px;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #d4af37;
            box-shadow: 0 0 8px rgba(212,175,55,0.6);
        }

    .btn-dark {
        background-color: #d4af37 !important; /* gold button */
        border: none !important;
        color: #000;
        font-weight: 700;
        letter-spacing: 1px;
        border-radius: 8px;
        transition: 0.2s;
    }

        .btn-dark:hover {
            background-color: #b9982c !important;
            transform: scale(1.01);
        }

    .text-danger {
        color: #ff6b6b !important;
    }
</style>


<h2 class="text-center">Admin Login</h2>

<div class="admin-card">
    <form method="post">
        <div class="form-group mb-3">
            <label>Username</label>
            <input asp-for="Input.Username" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-dark w-100">Login</button>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger mt-3">@Model.ErrorMessage</div>
        }
    </form>
</div>



