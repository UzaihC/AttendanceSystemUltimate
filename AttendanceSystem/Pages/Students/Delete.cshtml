@page
@model AttendanceSystem.Pages.Students.DeleteModel

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student?</p>

<ul>
    <li><strong>Student Number:</strong> @Model.Student.StudentNumber</li>
    <li><strong>Full Name:</strong> @Model.Student.FullName</li>
</ul>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Students/StudentList" class="btn btn-secondary">Cancel</a>
</form>
