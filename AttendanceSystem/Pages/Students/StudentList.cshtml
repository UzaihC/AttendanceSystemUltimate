@page
@model AttendanceSystem.Pages.Students.StudentsListModel
@{
    ViewData["Title"] = "Student List";
}

<div class="student-list-container">
    <div class="student-list-card">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Student List</h1>

            <form method="get" class="d-flex search-box">
                <input type="text" name="searchTerm" class="form-control me-2"
                       placeholder="Search student..." value="@Model.SearchTerm" />
                <button type="submit" class="btn btn-primary me-2">Search</button>
                <a class="btn btn-success" href="/Students/Create">Add Student</a>
            </form>
        </div>

        <table class="table table-bordered student-table">
            <thead>
                <tr>
                    <th>Student Number</th>
                    <th>Full Name</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Students)
                {
                    <tr>
                        <td>@s.StudentNumber</td>
                        <td>@s.FullName</td>
                        <td>@s.StudentId</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="/Students/Edit?id=@s.StudentId">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Students/Delete?id=@s.StudentId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
