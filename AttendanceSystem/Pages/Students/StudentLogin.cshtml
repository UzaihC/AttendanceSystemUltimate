@page
@model AttendanceSystem.Pages.Students.StudentLoginModel
@{
    ViewData["Title"] = "Student Login";
}
<style>
    body {
        background: linear-gradient(135deg, #0a2a63 0%, #2e5ea8 50%, #87bfff 100%);
        font-family: "Segoe UI", sans-serif;
        min-height: 100vh;
        padding-top: 40px;
    }

    .login-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 30px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        max-width: 420px;
        margin: auto;
        border-left: 5px solid #2e5ea8; /* student notebook accent */
    }

    h2 {
        color: #0a2a63;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 1px 1px 1px rgba(255,255,255,0.6);
    }

    label {
        font-weight: 600;
        color: #0a2a63;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #2e5ea8 !important;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #0a2a63 !important;
            box-shadow: 0 0 6px rgba(46,94,168,0.4);
        }

    .btn-primary {
        background-color: #0a2a63 !important;
        border-color: #0a2a63 !important;
        font-weight: 600;
        border-radius: 10px;
    }

        .btn-primary:hover {
            background-color: #06204a !important;
        }

    .login-footer-text {
        color: #0a2a63;
        font-weight: 500;
    }

    a {
        color: #2e5ea8;
        font-weight: 600;
    }

        a:hover {
            color: #0a2a63;
        }
</style>

<h2 class="text-center">Student Login</h2>

<div class="login-card">
    <form method="post">
        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Input.Email" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Student Number</label>
            <input asp-for="Input.StudentNumber" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label>Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <p class="mt-3 text-center login-footer-text">
            Not registered yet?
            <a asp-page="/Students/StudentRegister">Register here</a>
        </p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger mt-3">@Model.ErrorMessage</div>
        }
    </form>
</div>

