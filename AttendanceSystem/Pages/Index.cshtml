@page
@model AttendanceSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Attendance System";
}

<div style="display:flex; flex-direction:column; align-items:center; justify-content:center; height:90vh;">
    <div style="text-align:center; margin-bottom:40px;">
        <h1 style="color:navy;">Welcome to Attendance System</h1>
        <h3 style="color:gray;">Proceed as?</h3>
    </div>

    <div style="display:flex; gap:40px;">
        <!-- Admin -->
        <div style="border:1px solid #ccc; border-radius:12px; padding:30px; width:230px; text-align:center; background-color:#f5f5f5; box-shadow:0 4px 8px rgba(0,0,0,0.1);">
            <h2 style="color:#2b2b2b;">Admin</h2>
            <p style="color:gray;">Administrator login</p>
            <a asp-page="/Admin/AdminLogin" class="btn btn-dark" style="width:100%;">Proceed as Admin</a>
        </div>

        <!-- Student -->
        <div style="border:1px solid #ccc; border-radius:12px; padding:30px; width:230px; text-align:center; background-color:#e6f0ff; box-shadow:0 4px 8px rgba(0,0,0,0.1);">
            <h2 style="color:#003366;">Student</h2>
            <p style="color:gray;">Login or register as student</p>
            <a asp-page="/Students/StudentLogin" class="btn btn-primary" style="width:100%;">Proceed as Student</a>
        </div>

        <!-- Visitor -->
        <div style="border:1px solid #ccc; border-radius:12px; padding:30px; width:230px; text-align:center; background-color:#f0fff0; box-shadow:0 4px 8px rgba(0,0,0,0.1);">
            <h2 style="color:darkgreen;">Visitor</h2>
            <p style="color:gray;">Log your visit</p>
            <a asp-page="/Visitors/AddVisitor" class="btn btn-success" style="width:100%;">Proceed as Visitor</a>
        </div>
    </div>
</div>
